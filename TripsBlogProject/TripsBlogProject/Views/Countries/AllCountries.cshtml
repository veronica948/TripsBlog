
@model IEnumerable<TripsBlogProject.Models.Country>

@{
    ViewBag.Title = "All countries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All countries</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { name = item.Name })
            </td>
            <td>
                @Html.ActionLink("Posts about this country", "Posts", new { name = item.Name })
            </td>
        </tr>
    }

</table>


